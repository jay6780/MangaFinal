<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/nav_view"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">


    <LinearLayout
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/App_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/app_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/yakoltxt"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="Free Manga"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ccto"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="Api owner: Patrick Cosmos"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>


    <View
        android:id="@+id/viewSeperator"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_file"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/moonlight" />
            <TextView
                android:id="@+id/filetxt"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:text="Download videos"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_darkmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/moon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/moonlight" />
            <TextView
                android:id="@+id/value_dark"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bookmarked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/book_marked_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/book_marked_txt"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="Bookmark"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>